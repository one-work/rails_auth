<div id="tr_<%= model.id %>" class="media">
  <div class="media-content">
    <%= yield %>
  </div>
  <div class="media-right has-block-centered">
    <% if model.confirmed %>
      <div class="tags has-addons mb-0">
        <span class="tag"><%= svg_tag 'circle-check' %></span>
        <span class="tag is-success"><%= model.confirmed_i18n %></span>
      </div>
    <% else %>
      <div class="tags has-addons mb-0">
        <span class="tag"><%= svg_tag 'circle-question' %></span>
        <span class="tag is-warning"><%= model.confirmed_i18n %></span>
      </div>
    <% end %>
    <%= button_to({ action: 'actions', id: model.id }, class: 'button is-borderless') do %>
      <%= svg_tag 'ellipsis-vertical' %>
    <% end %>
  </div>
</div>
