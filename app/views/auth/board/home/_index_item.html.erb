<% if request.variant.include?(:mini_program) %>
  <div
    data-controller="mini-program"
    data-mini-program-nav-value="true"
    data-mini-program-url-value="/pages/profile/index"
    data-action="click->mini-program#navTo"
    class="media as-link"
  >
    <div class="media-content">
      <%= svg_tag 'user' %>
      <span><%= t('auth.board.users.show.title') %></span>
    </div>
    <div class="media-right">
      <%= svg_tag 'chevron-right' %>
    </div>
  </div>
  <div
    data-controller="mini-program"
    data-mini-program-nav-value="true"
    data-mini-program-url-value="/pages/mobile/index"
    data-action="click->mini-program#navTo"
    class="media as-link"
  >
    <div class="media-content">
      <%= svg_tag 'mobile' %>
      <span>手机号登录</span>
    </div>
    <div class="media-right">
      <%= svg_tag 'chevron-right' %>
    </div>
  </div>
<% else %>
  <%= link_to({ controller: 'users', action: 'show' }, class: 'media as-link') do %>
    <div class="media-content">
      <%= svg_tag 'user' %>
      <span class="ml-1"><%= t('auth.board.users.show.title') %></span>
    </div>
    <div class="media-right">
      <%= svg_tag 'chevron-right' %>
    </div>
  <% end %>
<% end %>
<%= link_to({ controller: 'accounts' }, class: 'media as-link') do %>
  <div class="media-content">
    <%= svg_tag 'users' %>
    <span class="ml-1"><%= t('auth.board.accounts.index.title') %></span>
  </div>
  <div class="media-right">
    <%= svg_tag 'chevron-right' %>
  </div>
<% end %>
<% if request.variant.include?(:wechat) %>
  <%= link_to({ controller: 'wechat/board/wechat_users' }, class: 'media as-link') do %>
    <div class="media-content">
      <%= svg_tag 'weixin', kind: 'brands' %>
      <span class="ml-1"><%= t('wechat.board.wechat_users.index.title') %></span>
    </div>
    <div class="media-right">
      <%= svg_tag 'chevron-right' %>
    </div>
  <% end %>
<% else %>
  <%= link_to({ controller: 'oauth_users' }, class: 'media as-link') do %>
    <div class="media-content">
      <%= svg_tag 'weixin', kind: 'brands' %>
      <span class="ml-1"><%= t('auth.board.oauth_users.index.title') %></span>
    </div>
    <div class="media-right">
      <%= svg_tag 'chevron-right' %>
    </div>
  <% end %>
<% end %>
