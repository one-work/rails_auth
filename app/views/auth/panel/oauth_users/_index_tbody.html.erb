<td>
  <div class="tags has-addons">
    <span class="tag <%= ['Wechat::ProgramUser'].include?(model.type) ? 'is-link' : 'is-info' %>"><%= model.type_i18n %></span>
    <span class="tag is-primary"><%= model.app_name %></span>
  </div>
  <p class="family-monospace"><%= model.appid %></p>
</td>
<td>
  <p class="family-monospace"><%= link_to model.uid, { uid: model.uid }, class: 'text-success' %></p>
  <p class="family-monospace">
  <% if model.unionid %>
    <%= link_to model.unionid, { unionid: model.unionid }, class: 'text-grey' %>
  <% end %>
  </p>
</td>
<td>
  <div class="is-several">
    <%= image_tag model.avatar_url, class: 'image is-24x24' if model.avatar_url.present? %>
    <span><%= model.name %></span>
  </div>
  <p class="text-grey"><%= model.identity %></p>
</td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
<td>
<% if model.user %>
  <%= button_to({ controller: 'users', action: 'show', id: model.user.id }, text: true) do %>
    <%= svg_tag 'user' %>
    <span class="ml-1"><%= model.user.name %></span>
  <% end %>
  <%= link_to({ user_id: model.user_id }) do %>
    <%= svg_tag 'users' %>
    <span class="ml-1">同账号</span>
  <% end %>
<% end %>
</td>
<td>
  <%= render partial: 'index_tr_actions', locals: { model: model } %>
  <div data-show-target="item" class="visibility-hidden">
    <%= link_to({ controller: 'sessions', uid: model.uid }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'eye' %>
      <span class="ml-1"><%= t('.sessions.index.title') %></span>
    <% end %>
  </div>
</td>
