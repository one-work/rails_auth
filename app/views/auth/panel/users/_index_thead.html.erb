<th>
  <p><%= Auth::User.human_attribute_name(:name) %></p>
  <p><%= Auth::User.human_attribute_name(:accounts) %></p>
  <p><%= Auth::User.human_attribute_name(:oauth_users) %></p>
</th>
<th>
  <p><%= Auth::User.human_attribute_name(:locale) %></p>
  <p><%= Auth::User.human_attribute_name(:timezone) %></p>
</th>
<th>
  <p><%= Auth::User.human_attribute_name(:created_at) %></p>
  <p>
    <%= link_to filter_params('last_login_at-desc': 1) do %>
      <span class="text-grey"><%= Auth::User.human_attribute_name(:last_login_at) %></span>
      <%= svg_tag 'arrow-down', class: "icon is-small #{params['last_login_at-desc'] ? 'text-success' : 'text-grey'}" %>
    <% end %>
  </p>
  <p><%= Auth::User.human_attribute_name(:last_login_ip) %></p>
</th>
<th><%= Auth::User.human_attribute_name(:disabled) %></th>
<th>权限</th>
