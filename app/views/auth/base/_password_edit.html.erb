<%=
  form_with(
    model: user,
    scope: '',
    url: { controller: 'passwords', action: 'update', token: user.password_reset_token },
    label: nil,
    placeholder: true,
    before_wrap: { submit: nil },
    wrap: { input: nil, submit: nil },
    all: { normal: 'field', submit: nil }
  ) do |f|
%>
  <%= f.hidden_field :identity, value: identity, id: nil %>
  <%= f.password_field :password, class: 'input is-medium' %>
  <%= f.password_field :password_confirmation, class: 'input is-medium' %>
  <%= f.submit 'чбошод', class: 'button is-fullwidth is-medium' %>
<% end %>
